<% provide(:page_title,@post.title) %>
<% title @post.title %>
<% description 'Agenda de los mejores eventos, conciertos, eventos, museos, fiestas y diversiÃ³n de Arequipa al dia a dia.'+@post.description %>
<% keywords 'Arequipa, Conciertos, Fiestas, Diversion, Salidas, Donde ir, Que Hacer, A donde ' %>


<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4"><%= @post.title %></h1>

          <!-- Author -->
          <p class="lead">
            Por:
            <a href="#">Blog AQP</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <% if !@post.fecha.blank? %>
            <p>a realizarse el <%= @post.fecha.strftime("%B") %></p>
          <% end %>

          <p>Posted on January 1, 2017 at 12:00 PM</p>

          <hr>

          <!-- Preview Image -->
          <%= cl_image_tag(@post.imagen,:class =>"img-fluid rounded", :alt => @post.title,:width=>900, :height=>300, :crop=>"scale")%>

          <hr>

          <!-- Post Content -->
          <%= @post.body.html_safe %>



        </div>
        <div class="top col-md-12 col-lg-4">
          <div class="destacadosTop-title two my-4">
            <p class="">TOP</p>
          </div>
          <div class="top_list">

            <ul>
              <% @sidebar.each do |sidebar| %>
              <%= link_to(sidebar) do%>
              <div class="d-flex flex-column aqpleftside">
                <div class="py-2" style="">
                  <div class="imagediv">
                    <%=cl_image_tag(sidebar.imagen, :height=>60, :width=>60, :crop=>"scale") %>
                  </div>
                  <div class="">
                    <p ><%= sidebar.title %></p>
                    <p class="title_list"><%= sidebar.description %></p>
                  </div>
                  <div class="gradient_hr">
                    <hr size="5">
                  </div>
                </div>
              </div>
              <% end %>
              <% end %>
            </ul>
          </div>
        </div>
  </div>
</div>

